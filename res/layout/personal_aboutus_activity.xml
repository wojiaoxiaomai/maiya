<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/comm_app_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/head_logo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_setting" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_logo"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_margin="@dimen/setting_btn_margin_left_right"
                android:layout_weight="1"
                android:background="@color/textview_hint_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="遇见不同"
                android:textColor="@color/textview_grey" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_margin="@dimen/setting_btn_margin_left_right"
                android:layout_weight="1"
                android:background="@color/textview_hint_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" 
            android:layout_weight="1">
            
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/maiyaapp" 
                android:layout_weight="1"/>
            
			<TextView
                android:id="@+id/version_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="扫描二维码\n您的朋友也可以下载麦芽生活APP"
                android:gravity="center"
                android:textColor="@color/textview_grey"
                android:textSize="@dimen/text_size_midle" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服电话："
                    android:textColor="@color/textview_grey"
                    android:textSize="@dimen/text_size_midle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="028-86523627"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_midle" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>